<% @properties.each do |property| %>
  <div class="item">
    <div class="panel panel-default relative">
      <div class="ribbon-heading text-h5 ribbon-default inline margin-none left absolute">Sale</div>
      <div class="cover hover overlay margin-none">
        <%= image_tag property.property_images.first, class: "img-responsive" %>
        <a href="pages/property.html" class="overlay overlay-full overlay-bg-black overlay-hover">
              <span class="v-center">
                  <span class="btn btn-circle btn-white"><i class="fa fa-eye"></i></span>
              </span>
        </a>
      </div>
      <div class="panel-body">
        <h4 class="margin-v-0-5"><%= property.title %></h4>
        <p class="small">
          <span class="fa fa-fw fa-star text-yellow-800"></span>
          <span class="fa fa-fw fa-star text-yellow-800"></span>
          <span class="fa fa-fw fa-star text-yellow-800"></span>
          <span class="fa fa-fw fa-star-o text-yellow-800"></span>
          <span class="fa fa-fw fa-star-o text-yellow-800"></span>
        </p>
        <p><%= truncate(property.description, length: 200) %></p>
        <span class="label label-grey-100"><%= number_to_currency(property.price) %></span>
        <i class="small fa fa-fw icon-home-fill-1" data-toggle="tooltip" data-title="Agency"></i>
        <a href="pages/front-property.html" class="btn btn-primary btn-circle absolute bottom right"><i class="fa fa-shopping-cart"></i></a>
      </div>
    </div>
  </div>
<% end %>
