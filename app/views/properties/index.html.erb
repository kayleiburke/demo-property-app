<% @properties.each do |p| %>
  <div class="item">
    <div class="panel panel-default relative">
      <div class="ribbon-heading text-h5 ribbon-primary inline left absolute margin-none">Sale</div>
      <div class="cover hover overlay margin-none">
        <%= image_tag "places/photodune-378874-real-estate-xs.jpg", class: "img-responsive" %>
        <a href="front-property.html" class="overlay overlay-full overlay-bg-black overlay-hover">
                      <span class="v-center">
                          <span class="btn btn-circle btn-white"><i class="fa fa-eye"></i></span>
                      </span>
        </a>
      </div>
      <div class="panel-body">
        <h4 class="margin-v-0-5"><%= p.name %></h4>
        <p class="small">
          <span class="fa fa-fw fa-star text-yellow-800"></span>
          <span class="fa fa-fw fa-star text-yellow-800"></span>
          <span class="fa fa-fw fa-star text-yellow-800"></span>
          <span class="fa fa-fw fa-star-o text-yellow-800"></span>
          <span class="fa fa-fw fa-star-o text-yellow-800"></span>
        </p>
        <p><%= p.description %></p>
        <span class="label label-grey-300">&euro;277,028.00</span>&nbsp;
        <i class="small fa fa-fw icon-home-fill-1" data-toggle="tooltip" data-title="Agency"></i>
        <a href="front-property.html" class="btn btn-primary btn-circle absolute bottom right"><i class="fa fa-shopping-cart"></i></a>
      </div>
    </div>
  </div>
<% end %>
